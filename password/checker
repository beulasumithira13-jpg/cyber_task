<body>

<div class="container">
    <h2>Password Strength Checker üîê</h2>

    <input 
        type="password" 
        id="password" 
        placeholder="Enter password"
        onkeyup="checkStrength()"
    >

    <div class="toggle" onclick="togglePassword()">üëÅ Show / Hide Password</div>

    <div class="progress">
        <div class="progress-bar" id="bar"></div>
    </div>

    <div id="strength"></div>

    <ul>
        <li id="len" class="invalid">At least 6 characters</li>
        <li id="upper" class="invalid">One uppercase letter</li>
        <li id="num" class="invalid">One number</li>
        <li id="sym" class="invalid">One special character</li>
    </ul>
</div>

<script>
    const commonPasswords = ["123456", "password", "qwerty", "admin"];

    function togglePassword() {
        const pwd = document.getElementById("password");
        pwd.type = pwd.type === "password" ? "text" : "password";
    }

    function checkStrength() {
        const password = document.getElementById("password").value;
        const strengthText = document.getElementById("strength");
        const bar = document.getElementById("bar");

        let strength = 0;

        // Rules
        password.length >= 6 ? valid("len") : invalid("len");
        /[A-Z]/.test(password) ? valid("upper") : invalid("upper");
        /[0-9]/.test(password) ? valid("num") : invalid("num");
        /[^A-Za-z0-9]/.test(password) ? valid("sym") : invalid("sym");

        if (password.length >= 6) strength++;
        if (/[A-Z]/.test(password)) strength++;
        if (/[0-9]/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;

        if (password.length === 0) {
            strengthText.innerHTML = "";
            bar.style.width = "0%";
            return;
        }

        if (commonPasswords.includes(password)) {
            strengthText.innerHTML = "Common password ‚ùå";
            strengthText.style.color = "red";
            bar.style.width = "20%";
            bar.style.background = "red";
            return;
        }

        if (strength <= 1) {
            strengthText.innerHTML = "Weak Password ‚ùå";
            strengthText.style.color = "red";
            bar.style.width = "25%";
            bar.style.background = "red";
        }
        else if (strength === 2 || strength === 3) {
            strengthText.innerHTML = "Medium Password ‚ö†Ô∏è";
            strengthText.style.color = "orange";
            bar.style.width = "60%";
            bar.style.background = "orange";
        }
        else {
            strengthText.innerHTML = "Strong Password ‚úÖ";
            strengthText.style.color = "green";
            bar.style.width = "100%";
            bar.style.background = "green";
        }
    }

    function valid(id) {
        document.getElementById(id).className = "valid";
    }

    function invalid(id) {
        document.getElementById(id).className = "invalid";
    }
</script>

</body>
</html>
