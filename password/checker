            border-radius: 10px;
            margin-top: 12px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s;
        }

        #strength {
            margin-top: 10px;
            font-weight: bold;
        }

        ul {
